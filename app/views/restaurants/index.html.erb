<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.address %></td>
    <td><%= restaurant.phone_number %></td>
    <td><%= restaurant.category %></td>
    <td><%= link_to 'Show', restaurant %></td><br>
  </tr>
<% end %>

<p><%= link_to 'Create a new restaurant', new_restaurant_path, class: "btn btn-info" %></p>
